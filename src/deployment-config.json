{
  "project": {
    "name": "JetDash",
    "version": "1.0.0",
    "description": "Smart and Secure Delivery Platform for Nigeria",
    "domain": "jetdash.ng",
    "region": "Nigeria (Gombe State)"
  },
  "build": {
    "framework": "React + TypeScript",
    "buildTool": "Vite",
    "outputDir": "dist",
    "buildCommand": "npm run build",
    "devCommand": "npm run dev",
    "installCommand": "npm install"
  },
  "environment": {
    "production": {
      "VITE_SUPABASE_URL": "https://your-project.supabase.co",
      "VITE_SUPABASE_ANON_KEY": "your-anon-key-here",
      "VITE_PAYSTACK_PUBLIC_KEY": "pk_live_your_paystack_key",
      "VITE_FLUTTERWAVE_PUBLIC_KEY": "FLWPUBK-your_flutterwave_key",
      "VITE_APP_ENV": "production",
      "VITE_APP_VERSION": "1.0.0"
    },
    "staging": {
      "VITE_SUPABASE_URL": "https://your-staging-project.supabase.co",
      "VITE_SUPABASE_ANON_KEY": "your-staging-anon-key-here",
      "VITE_PAYSTACK_PUBLIC_KEY": "pk_test_your_paystack_test_key",
      "VITE_FLUTTERWAVE_PUBLIC_KEY": "FLWPUBK_TEST-your_flutterwave_test_key",
      "VITE_APP_ENV": "staging",
      "VITE_APP_VERSION": "1.0.0-beta"
    }
  },
  "hosting": {
    "recommended": [
      {
        "provider": "Vercel",
        "config": {
          "framework": "vite",
          "buildCommand": "npm run build",
          "outputDirectory": "dist",
          "installCommand": "npm install",
          "devCommand": "npm run dev"
        },
        "features": ["Custom domains", "SSL", "CDN", "Edge functions"]
      },
      {
        "provider": "Netlify",
        "config": {
          "buildCommand": "npm run build",
          "publishDirectory": "dist",
          "functionsDirectory": "netlify/functions"
        },
        "features": ["Custom domains", "SSL", "CDN", "Serverless functions"]
      }
    ]
  },
  "database": {
    "provider": "Supabase",
    "features": [
      "PostgreSQL database",
      "Authentication",
      "Real-time subscriptions",
      "Row Level Security",
      "Edge Functions",
      "Storage"
    ],
    "tables": [
      "users",
      "deliveries",
      "riders",
      "payments",
      "sme_accounts",
      "delivery_units",
      "transactions"
    ]
  },
  "payments": {
    "primary": "Paystack",
    "secondary": "Flutterwave",
    "features": [
      "Card payments",
      "Bank transfers",
      "Mobile money",
      "Wallet system",
      "Recurring payments"
    ]
  },
  "features": {
    "customer": [
      "Package delivery booking",
      "Real-time tracking",
      "Digital wallet",
      "Payment history",
      "Order management"
    ],
    "rider": [
      "Delivery acceptance",
      "GPS navigation",
      "Earnings tracking",
      "Wallet management",
      "Performance analytics"
    ],
    "sme": [
      "Bulk delivery units",
      "Multiple delivery creation",
      "Business dashboard",
      "Analytics and reports",
      "Volume discounts"
    ]
  },
  "security": {
    "authentication": "Supabase Auth",
    "encryption": "HTTPS/TLS",
    "payments": "PCI DSS compliant",
    "data": "End-to-end encryption",
    "sessions": "JWT tokens"
  },
  "monitoring": {
    "errors": "Built-in error handling",
    "performance": "Web Vitals tracking",
    "uptime": "Health check endpoints",
    "analytics": "User behavior tracking"
  },
  "deployment": {
    "steps": [
      "1. Set up environment variables",
      "2. Configure Supabase project",
      "3. Set up payment gateways",
      "4. Deploy to hosting platform",
      "5. Configure custom domain",
      "6. Set up monitoring",
      "7. Test all functionality"
    ],
    "requirements": [
      "Node.js 18+",
      "npm or yarn",
      "Supabase account",
      "Paystack account (Nigerian)",
      "Flutterwave account",
      "Domain name",
      "SSL certificate"
    ]
  },
  "maintenance": {
    "updates": "Monthly security updates",
    "backups": "Daily automated backups",
    "monitoring": "24/7 uptime monitoring",
    "support": "Business hours support"
  }
}